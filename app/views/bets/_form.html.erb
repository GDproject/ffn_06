<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @bet do |f| %>
      <%= render "shared/error_messages", object: @bet %>

      <div class="form-group">
        <%= f.label :home_coin %>
        <%= f.text_field :home_coin %>
      </div>
      <div class="form-group">
        <%= f.label :away_coin %>
        <%= f.text_field :away_coin %>
      </div>
      <div class="form-group">
        <%= f.hidden_field :user_id, :value => session[:user_id] %>
      </div>
      <div class="form-group">
        <%= f.hidden_field :match_id, :value => @id_match %>
      </div>
      <div class="form-group">
        <%= f.label :score_id %>
        <%= f.collection_select :score_id, @scores, :id, :rate_score,
          prompt: true %>
      </div>
      <%= f.submit %>
    <% end %>
  </div>
</div>
